<% provide(:title, 'All users') %>
<h1>All users</h1>

<ul class="users">
  <% @users.each do |u| %>
    <li>
      <aside class="col-md-5">
      <section class="user_info">
  <%= gravatar_for_user u, size:50 %>
      <%= link_to u.name, u %>
      <% hidemail = u.email.chars %>
      <% hidemail[2,3] = '*' %>
      <%= content_tag(:div, hidemail.join(), class:"user_email") %>
      </section>
      </aside>
    </li>
  <% end %>
</ul>