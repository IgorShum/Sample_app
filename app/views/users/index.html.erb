<% provide(:title, 'All users') %>
<h1>All users</h1>
<%= will_paginate %>

<ul class="users">
  <% @users.each do |u| %>
    <li>
      <aside class="col-md-5">
      <section class="user_info">
  <%= gravatar_for_user u, size:50 %>
      <%= link_to u.name, u %>
      <%= content_tag(:div, u.email, class:"user_email") %>
      </section>
      </aside>
    </li>
  <% end %>
</ul>

<%= will_paginate %>
